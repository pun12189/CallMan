<Window x:Class="BahiKitab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BahiKitab" xmlns:views="clr-namespace:BahiKitab.Views"
        xmlns:vm="clr-namespace:BahiKitab.ViewModels"
        xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="KliKCRM" FontFamily="Segoe UI" Icon="/Assets/logo.png" WindowState="Maximized">
    <Window.Resources>
        <Style x:Key="TopMenuStyle" TargetType="Menu">
            <Setter Property="Background" Value="#20b2aa"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5,10"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <!-- icons set -->
        <icon:FontAwesome Kind="ChartBarSolid" Height="14" x:Key="dashicon"/>
        <icon:FontAwesome Kind="HardDriveSolid" Height="14" x:Key="followicon"/>
        <icon:FontAwesome Kind="HardDriveSolid" Height="14" x:Key="leadicon"/>
        <icon:FontAwesome Kind="UsersSolid" Height="14" x:Key="crmicon"/>
        <icon:FontAwesome Kind="UserSolid" Height="14" x:Key="adminicon"/>
        <icon:FontAwesome Kind="DiagramNextSolid" Height="14" x:Key="alleadsicon"/>
        <icon:FontAwesome Kind="HexagonNodesSolid" Height="14" x:Key="allstatsicon"/>
        <icon:FontAwesome Kind="FaceDizzySolid" Height="14" x:Key="deadicon"/>
        <icon:FontAwesome Kind="SignatureSolid" Height="14" x:Key="matureicon"/>
        <icon:FontAwesome Kind="EnvelopesBulkSolid" Height="14" x:Key="ordericon"/>
        <icon:FontAwesome Kind="BoxesStackedSolid" Height="14" x:Key="stockicon"/>
        <icon:FontAwesome Kind="BarsProgressSolid" Height="14" x:Key="stockicon1"/>
    </Window.Resources>
    <Window.DataContext>
        <!-- Set the DataContext to the Main Window ViewModel -->
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Image Source="/Assets/logo.png" Margin="5,0" HorizontalAlignment="Left" VerticalAlignment="Center" Height="30" Stretch="Uniform" CacheMode="BitmapCache" RenderOptions.BitmapScalingMode="NearestNeighbor"/>

            <Menu Grid.Row="1" Grid.ColumnSpan="3" Style="{StaticResource TopMenuStyle}">

                <MenuItem Header="Dashboard" Icon="{StaticResource dashicon}" Command="{Binding NavigateCommand}" CommandParameter="Dashboard"/>                

                <MenuItem Header="Leads" Icon="{StaticResource leadicon}">
                    <MenuItem Header="All Leads" Icon="{StaticResource alleadsicon}" Background="#20b2aa" Command="{Binding NavigateCommand}" CommandParameter="Leads"/>
                    <MenuItem Header="All Stats" Icon="{StaticResource allstatsicon}" Background="#20b2aa" Visibility="Collapsed"/>
                    <MenuItem Header="Dead Leads" Icon="{StaticResource deadicon}" Background="#20b2aa" Command="{Binding NavigateCommand}" CommandParameter="Dead"/>
                    <MenuItem Header="New Leads" Icon="{StaticResource matureicon}" Background="#20b2aa" Command="{Binding NavigateCommand}" CommandParameter="New"/>
                </MenuItem>

                <MenuItem Header="CRM" Icon="{StaticResource crmicon}">
                    <MenuItem Header="Customers" Icon="{StaticResource alleadsicon}" Background="#20b2aa" Command="{Binding NavigateCommand}" CommandParameter="Mature"/>
                    <MenuItem Header="Orders" Icon="{StaticResource ordericon}" Background="#20b2aa" Command="{Binding NavigateCommand}" CommandParameter="Orders"/>
                </MenuItem>

                <MenuItem Header="Inventory" Icon="{StaticResource stockicon}" Command="{Binding NavigateCommand}" CommandParameter="Inventory"/>

                <MenuItem Header="Tasks" Icon="{StaticResource stockicon1}" Command="{Binding NavigateCommand}" CommandParameter="Tasks"/>

                <MenuItem Header="Admin Settings" Icon="{StaticResource adminicon}" Command="{Binding NavigateCommand}" CommandParameter="Admin"/>

            </Menu>
        </Grid>

        <Grid>
            <Border>
                <ContentControl Content="{Binding CurrentView}">
                    <ContentControl.Resources>
                        <DataTemplate DataType="{x:Type vm:LeadsViewModel}">
                            <views:LeadsView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:AdminSettingsViewModel}">
                            <views:AdminSettingsView MainViewCommand="{Binding DataContext.NavigateCommand,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}"/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:DeadLeadsViewModel}">
                            <views:DeadLeadsView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:NewLeadsViewModel}">
                            <views:NewLeadsView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:MatureLeadsViewModel}">
                            <views:MatureLeadsView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
                            <views:DashboardView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:OrderViewModel}">
                            <views:OrderView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:StaffViewModel}">
                            <views:StaffView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:InventoryViewModel}">
                            <views:InventoryView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:CategoryViewModel}">
                            <views:CategoryView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:TaskViewModel}">
                            <views:TaskView/>
                        </DataTemplate>
                    </ContentControl.Resources>
                </ContentControl>
            </Border>
        </Grid>
    </DockPanel>
