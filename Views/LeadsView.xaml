<UserControl x:Class="BahiKitab.Views.LeadsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BahiKitab.Views"
             xmlns:core="clr-namespace:BahiKitab.Core"
             xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d">
    <UserControl.Resources>
        <core:IdToButtonTextConverter x:Key="IdToButtonTextConverter"/>
    </UserControl.Resources>
    <Grid Margin="10">

        <!-- Left Column: Leads List (DataGrid) -->
        <StackPanel Margin="0,0,10,0">
            <TextBlock Text="CRM Leads Management" Style="{StaticResource TitleStyle}" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

            <!-- Command Buttons for List -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Right">
                <Button Command="{Binding LoadLeadsCommand}" Style="{StaticResource KlikButtonStyle}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <icon:PackIconFontAwesome Kind="RotateSolid" Height="12" Width="12" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="Refresh Leads" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Button Style="{StaticResource KlikButtonStyle}" Visibility="Visible">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <icon:PackIconFontAwesome Kind="ArrowUpFromBracketSolid" Height="12" Width="12" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="Import" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Button Command="{Binding NewLeadCommand}" Style="{StaticResource KlikButtonStyle}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <icon:PackIconFontAwesome Kind="PlusSolid" Height="12" Width="12" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="New Lead" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
            </StackPanel>

            <!-- Data Grid to display Leads -->
            <DataGrid ItemsSource="{Binding Leads}" 
                  SelectedItem="{Binding SelectedLead, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                      CanUserAddRows="False"
                  Height="450"
                  SelectionMode="Single"
                      ScrollViewer.CanContentScroll="True" 
      ScrollViewer.VerticalScrollBarVisibility="Auto"
      ScrollViewer.HorizontalScrollBarVisibility="Auto">
                <DataGrid.Columns>                    
                    <DataGridTemplateColumn Header="Name" Width="*" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                    <Button Content="Update Info" Width="80" Height="25" HorizontalAlignment="Center" Background="ForestGreen" FontWeight="Bold" Margin="0,10"/>
                                    <Button Content="Edit Info" Width="60" Height="25" HorizontalAlignment="Center" Background="CornflowerBlue" FontWeight="Bold"/>
                                    <TextBlock HorizontalAlignment="Center" Text="{Binding Id, StringFormat=ID: {0}}" FontWeight="Bold" Margin="0,20"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Contact" Width="2*" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="{Binding Company}" Grid.Row="0" Grid.Column="2" FontSize="14" Margin="0,10" FontWeight="Bold"/>
                                    <icon:PackIconFontAwesome Kind="PhoneSolid" Grid.Row="1" Grid.Column="0" FontSize="14" FontWeight="Bold"/>
                                    <icon:PackIconMaterial Kind="Email" Grid.Row="2" Grid.Column="0" FontSize="14" FontWeight="Bold"/>
                                    <icon:PackIconMaterial Kind="MapMarker" Grid.Row="3" Grid.Column="0" FontSize="14" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Phone}" Grid.Row="1" Grid.Column="2" FontSize="14"/>
                                    <TextBlock Text="{Binding Email}" Grid.Row="2" Grid.Column="2" FontSize="14"/>
                                    <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="2">
                                        <TextBlock Text="{Binding City, StringFormat='{}{0}\, '}" FontSize="12" Margin="2,0" />
                                        <TextBlock Text="{Binding State, StringFormat='{}{0}\, '}" FontSize="12" Margin="2,0"/>
                                        <TextBlock Text="{Binding District, StringFormat='{}{0}\, '}" FontSize="12" Margin="2,0"/>
                                        <TextBlock Text="{Binding Pincode, StringFormat='{}{0}\, '}" FontSize="12" Margin="2,0"/>
                                        <TextBlock Text="{Binding Country}" FontSize="12" Margin="2,0"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <!--<DataGridTextColumn Header="Company" Binding="{Binding Company}" Width="*" IsReadOnly="True"/>-->
                    <DataGridTextColumn Header="Stage" Binding="{Binding Stage}" Width="*" IsReadOnly="True"/>
                    <!--<DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="1.5*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="1.5*" IsReadOnly="True"/>-->
                    <DataGridTextColumn Header="Lead Source" Binding="{Binding LeadSource}" Width="*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Tags" Binding="{Binding Tags}" Width="*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Label" Binding="{Binding Label}" Width="*" IsReadOnly="True"/>
                    <DataGridTemplateColumn Header="Actions" Width="60">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Background="Transparent" Command="{Binding DataContext.UpdateLeadCommand, RelativeSource={RelativeSource AncestorType=local:LeadsView}}" BorderThickness="0" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                        <icon:FontAwesome Kind="PencilSolid"/>
                                    </Button>
                                    <Button Background="Transparent" Command="{Binding DataContext.DeleteLeadCommand, RelativeSource={RelativeSource AncestorType=local:LeadsView}}" BorderThickness="0" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                        <icon:FontAwesome Kind="TrashSolid"/>
                                    </Button>
                                </StackPanel>                                
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

        <!-- Right Column: Lead Details / CRUD Form -->

    </Grid>
</UserControl>
