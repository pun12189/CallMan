<UserControl x:Class="BahiKitab.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BahiKitab.Views"
xmlns:core="clr-namespace:BahiKitab.Core"
xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
xmlns:helper="clr-namespace:BahiKitab.Helper"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <core:IdToButtonTextConverter x:Key="IdToButtonTextConverter"/>        
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="DashBoard" Style="{StaticResource TitleStyle}" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

        <TabControl Grid.Row="2" BorderThickness="0" Background="Transparent">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Padding" Value="15,8"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Style>
            </TabControl.Resources>

            <TabItem Header="Analytics">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width=".2*"/>
                        <ColumnDefinition Width=".2*"/>
                        <ColumnDefinition Width=".2*"/>
                        <ColumnDefinition Width=".2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Border BorderThickness="1" BorderBrush="AliceBlue" Background="#20b2aa" Grid.Column="0" Grid.Row="0" MinHeight="100" MinWidth="130" Margin="5">
                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="10"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="{Binding TotalLeads}" FontSize="25" FontWeight="Bold" FontFamily="Segoe UI" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="Total Leads" Grid.Row="2" FontSize="25" FontWeight="Bold" FontFamily="Segoe UI" Foreground="White" HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>
                    <Border BorderThickness="1" BorderBrush="AliceBlue" Background="#20b2aa" Grid.Column="1" Grid.Row="0" MinHeight="100" MinWidth="130" Margin="5">
                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="10"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="{Binding FollowUpLeads}" FontSize="25" FontWeight="Bold" FontFamily="Segoe UI" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="FollowUp's" Grid.Row="2" FontSize="25" FontWeight="Bold" FontFamily="Segoe UI" Foreground="White" HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>
                    <Border BorderThickness="1" BorderBrush="AliceBlue" Background="#20b2aa" Grid.Column="2" Grid.Row="0" MinHeight="100" MinWidth="130" Margin="5">
                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="10"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="{Binding MatureLeads}" FontSize="25" FontWeight="Bold" FontFamily="Segoe UI" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="Mature Leads" Grid.Row="2" FontSize="25" FontWeight="Bold" FontFamily="Segoe UI" Foreground="White" HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>
                    <Border BorderThickness="1" BorderBrush="AliceBlue" Background="#20b2aa" Grid.Column="0" Grid.Row="2" MinHeight="100" MinWidth="130" Margin="5">
                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="10"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="{Binding DeadLeads}" FontSize="25" FontWeight="Bold" FontFamily="Segoe UI" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="Dead Leads" Grid.Row="2" FontSize="25" FontWeight="Bold" FontFamily="Segoe UI" Foreground="White" HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>
                    <Border BorderThickness="1" BorderBrush="AliceBlue" Background="#20b2aa" Grid.Column="1" Grid.Row="2" MinHeight="100" MinWidth="130" Margin="5">
                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="10"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="{Binding NewLeads}" FontSize="25" FontWeight="Bold" FontFamily="Segoe UI" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="New Leads" Grid.Row="2" FontSize="25" FontWeight="Bold" FontFamily="Segoe UI" Foreground="White" HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>
                    <Border BorderThickness="1" BorderBrush="AliceBlue" Background="#20b2aa" Grid.Column="2" Grid.Row="2" MinHeight="100" MinWidth="130" Margin="5">
                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="10"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="{Binding TotalOrders}" FontSize="25" FontWeight="Bold" FontFamily="Segoe UI" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="Total Orders" Grid.Row="2" FontSize="25" FontWeight="Bold" FontFamily="Segoe UI" Foreground="White" HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
            <TabItem Header="Reports">
                <TextBlock Text="Reports will be shown here" FontSize="25" FontWeight="Bold" FontFamily="Segoe UI" Foreground="#20b2aa" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </TabItem>
        </TabControl>

        

    </Grid>
</UserControl>
