<UserControl x:Class="BahiKitab.Views.LeadStatusView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BahiKitab.Views"
             xmlns:control="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions> 
        <TextBlock Grid.Row="0" Text="Lead Update" FontSize="18" FontWeight="SemiBold" Margin="15"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <RadioButton x:Name="rdFollow" GroupName="Lead" Content="Follow Up" FontSize="12" FontWeight="Bold" Margin="5,10"/>
            <RadioButton x:Name="rdMature" GroupName="Lead" Content="Matured" FontSize="12" FontWeight="Bold" Margin="5,10"/>
            <RadioButton x:Name="rdDead" GroupName="Lead" Content="Dead" FontSize="12" FontWeight="Bold" Margin="5,10"/>
        </StackPanel>
        <Grid Margin="0,0,0,10" Grid.Row="2" Visibility="{Binding ElementName=rdFollow, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="FollowUp Stages" FontSize="12" FontWeight="SemiBold" Margin="5,10,0,0"/>
            <ComboBox x:Name="cbFollowup" Grid.Row="1" Margin="5,0" DisplayMemberPath="Name" SelectedValuePath="Id"/>
            <TextBlock Grid.Row="2" Text="Next FollowUp" FontSize="12" FontWeight="SemiBold" Margin="5,10,0,0"/>
            <control:DateTimePicker x:Name="dtNFollow" IsTodayHighlighted="True" Grid.Row="3" FirstDayOfWeek="Monday" Margin="5,0" IsClockVisible="True"/>
            <TextBlock Grid.Row="4" Text="Message" FontSize="12" FontWeight="SemiBold" Margin="5,10,0,0"/>
            <TextBox x:Name="tbFMsg" Grid.Row="5" AcceptsReturn="True" TextWrapping="Wrap" FontSize="14" Height="60" Margin="5,0"/>
        </Grid>
        <Grid Margin="0,0,0,10" Grid.Row="2" Visibility="{Binding ElementName=rdMature, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Order Value" FontSize="12" FontWeight="SemiBold" Margin="5,10,0,0"/>
            <TextBox x:Name="tbOVal" Grid.Row="1" FontSize="12" FontWeight="Bold" VerticalContentAlignment="Center" Height="30" Margin="5,0"/>
            <TextBlock Grid.Row="2" Text="Payment Received" FontSize="12" FontWeight="SemiBold" Margin="5,10,0,0"/>
            <TextBox x:Name="tbRVal" Grid.Row="3" FontSize="12" FontWeight="Bold" VerticalContentAlignment="Center" Height="30" Margin="5,0"/>            
            <TextBlock Grid.Row="4" Text="Next FollowUp" FontSize="12" FontWeight="SemiBold" Margin="5,10,0,0"/>
            <control:DateTimePicker x:Name="dtNFollow2" PickerVisibility="HourMinute" control:TextBoxHelper.UseFloatingWatermark="False" control:DatePickerHelper.DropDownButtonContent="" IsTodayHighlighted="True" Grid.Row="5" FirstDayOfWeek="Monday" Margin="5,0"/>
            <TextBlock Grid.Row="6" Text="Message" FontSize="12" FontWeight="SemiBold" Margin="5,10,0,0"/>
            <TextBox Grid.Row="7" x:Name="tbLMsg" AcceptsReturn="True" TextWrapping="Wrap" FontSize="14" Height="60" Margin="5,0"/>
        </Grid>
        <Grid Margin="0,0,0,10" Grid.Row="2" Visibility="{Binding ElementName=rdDead, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Dead Reason" FontSize="12" FontWeight="SemiBold" Margin="5,10,0,0"/>
            <ComboBox x:Name="cbReason" Grid.Row="1" Margin="5,0" DisplayMemberPath="Name" SelectedValuePath="Id"/>
            <TextBox x:Name="tbDMsg" Grid.Row="2" AcceptsReturn="True" TextWrapping="Wrap" FontSize="14" Height="60" Margin="5,0"/>
        </Grid>

        <Button Content="Update Status" Grid.Row="3" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="30" Click="UpdateLeadStatus"/>
    </Grid>
</UserControl>
