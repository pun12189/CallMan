<UserControl x:Class="BahiKitab.Views.ImportDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BahiKitab.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="White" CornerRadius="8" Margin="20" BorderBrush="#E0E0E0" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" Color="Gray" Opacity="0.2" ShadowDepth="2"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>            

            <Separator Grid.Row="0" VerticalAlignment="Bottom" Background="#EEEEEE" Margin="0"/>

            <StackPanel Grid.Row="1" Margin="20,25">

                <DockPanel LastChildFill="False" Margin="0,0,0,20">
                    <TextBlock Text="Download Sample Format" VerticalAlignment="Center" 
                               Foreground="#555E6D" FontSize="14" FontWeight="Medium"/>
                    <Button DockPanel.Dock="Right" Padding="15,5" Background="#F0F2F5" BorderBrush="#D1D5DB" Style="{StaticResource KlikButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M12 16L7 11H10V4H14V11H17L12 16ZM5 18H19V20H5V18Z" Fill="#374151" Width="14" Height="14" Stretch="Uniform" Margin="0,0,8,0"/>
                            <TextBlock Text="Download" Foreground="#374151"/>
                        </StackPanel>
                    </Button>
                </DockPanel>

                <TextBlock Text="Select (xlxs) file" Foreground="#555E6D" Margin="0,0,0,8"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <Button Content="Choose File" Padding="10,4" BorderBrush="#9CA3AF" Style="{StaticResource KlikButtonStyle}"/>
                    <TextBlock Text="No file chosen" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="#6B7280"/>
                </StackPanel>

                <CheckBox Content="Marg Orders Import" Foreground="#555E6D" FontSize="13"/>
                <CheckBox Content="Busy Orders Import" Foreground="#555E6D" FontSize="13"/>
                <CheckBox Content="Tally Orders Import" Foreground="#555E6D" FontSize="13"/>
            </StackPanel>

            <StackPanel Grid.Row="2">
                <Separator Background="#EEEEEE" Margin="20,0"/>
                <Button Content="Submit" Background="#FF9854" Foreground="White" 
                        FontWeight="Bold" FontSize="14" Height="45" Width="120"
                        Margin="0,20,0,20" BorderThickness="0" Click="Button_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>

        </Grid>
    </Border>
</UserControl>
