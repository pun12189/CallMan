<UserControl x:Class="BahiKitab.Views.AddStaffProfile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BahiKitab.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="InputLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,10,0,4"/>
        </Style>

        <Style x:Key="InputBox" TargetType="TextBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="4" BorderThickness="1" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InputPass" TargetType="PasswordBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border CornerRadius="4" BorderThickness="1" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,10,0,0">
            <Border Width="120" Height="120" CornerRadius="60" BorderThickness="1" Margin="0,0,0,15">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" Color="#AAA" Opacity="0.4" ShadowDepth="2"/>
                </Border.Effect>
                <Border.Background>
                    <ImageBrush x:Name="ProfileImagePreview" Stretch="UniformToFill"/>
                </Border.Background>
            </Border>

            <Button Content="Upload Photo..." 
                    Click="UploadButton_Click"
                    Background="White" 
                    BorderBrush="#CCC" 
                    BorderThickness="1" 
                    Padding="10,5"
                    Foreground="#555">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <TextBlock Text="Allowed: JPG, PNG. Max 2MB." 
                       FontSize="11" 
                       Foreground="#999" 
                       HorizontalAlignment="Center" 
                       Margin="0,5,0,0"/>
        </StackPanel>

        <TabControl Grid.Column="2" BorderThickness="0" Background="Transparent" Margin="0,-5,0,0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Padding" Value="15,8"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Style>
            </TabControl.Resources>

            <TabItem Header="General Info">
                <Grid Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0">
                        <TextBlock Text="Full Name" Style="{StaticResource InputLabel}" Margin="0,0,0,4"/>
                        <TextBox x:Name="txtName" Style="{StaticResource InputBox}"/>
                    </StackPanel>

                    <Grid Grid.Row="1" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Contact Number" Style="{StaticResource InputLabel}"/>
                            <TextBox x:Name="txtPhone" Style="{StaticResource InputBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Email Address" Style="{StaticResource InputLabel}"/>
                            <TextBox x:Name="txtEmail" Style="{StaticResource InputBox}"/>
                        </StackPanel>
                    </Grid>

                    <StackPanel Grid.Row="2" Margin="0,10,0,0">
                        <TextBlock Text="Address" Style="{StaticResource InputLabel}"/>
                        <TextBox x:Name="txtAddress" Style="{StaticResource InputBox}" 
                                 VerticalAlignment="Stretch" 
                                 VerticalContentAlignment="Top" 
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True"
                                 Height="80"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Account Security">
                <Grid Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock Text="Set up login credentials for this user." Foreground="#888" FontSize="12" Margin="0,0,0,15"/>

                        <TextBlock Text="Username" Style="{StaticResource InputLabel}"/>
                        <TextBox x:Name="txtUsername" Style="{StaticResource InputBox}"/>

                        <Grid Margin="0,15,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Password" Style="{StaticResource InputLabel}"/>
                                <PasswordBox x:Name="pwdPassword" Style="{StaticResource InputPass}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Confirm Password" Style="{StaticResource InputLabel}"/>
                                <PasswordBox x:Name="pwdConfirm" Style="{StaticResource InputPass}"/>
                            </StackPanel>
                        </Grid>

                        <Border Background="#FFF8E1" BorderBrush="#FFECB3" BorderThickness="1" CornerRadius="4" Padding="10" Margin="0,20,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ℹ" Foreground="#F57F17" FontWeight="Bold" Margin="0,0,8,0"/>
                                <TextBlock Text="Password must be at least 8 characters long." Foreground="#F57F17" FontSize="11"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Cancel" IsCancel="True"
                    Background="Transparent" Foreground="#666" Margin="0,0,10,0"
                    BorderThickness="0" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Content="Create User" IsDefault="True"
                    Background="#2196F3" Foreground="White" Padding="25,8"
                    BorderThickness="0" FontWeight="Bold" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
