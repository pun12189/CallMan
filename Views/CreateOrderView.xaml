<UserControl x:Class="BahiKitab.Views.CreateOrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BahiKitab.Views"
             xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:helper="clr-namespace:BahiKitab.Helper"
             xmlns:model="clr-namespace:BahiKitab.Models"
             mc:Ignorable="d" x:Name="createOrder"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="InputBox" TargetType="TextBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="4" BorderThickness="1" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <DataTemplate x:Key="TextTemplate">
            <StackPanel Margin="10" VerticalAlignment="Center">
                <TextBlock Text="{Binding Label}" FontWeight="Bold" Margin="0,5"/>
                <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" Padding="5" Style="{StaticResource InputBox}"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="DropdownTemplate">
            <StackPanel Margin="10" VerticalAlignment="Center">
                <TextBlock Text="{Binding Label}" FontWeight="Bold" Margin="0,5"/>
                <ComboBox ItemsSource="{Binding Options}" SelectedItem="{Binding Value}" Padding="5"/>
            </StackPanel>
        </DataTemplate>
        
        <helper:FieldTemplateSelector x:Key="MySelector" TextTemplate="{StaticResource TextTemplate}" DropdownTemplate="{StaticResource DropdownTemplate}"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <WrapPanel Orientation="Horizontal" Grid.Row="0">
            <StackPanel Orientation="Vertical" Margin="10" VerticalAlignment="Center"> 
                <TextBlock Text="Select Customer" Margin="0,5" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal">
                    <ComboBox x:Name="cbCust" Margin="0,5" VerticalAlignment="Center" Width="150">
                        <ComboBox.ItemTemplate>
                            <DataTemplate DataType="{x:Type model:Lead}">
                                <TextBlock FontSize="14" FontWeight="DemiBold">
                                    <TextBlock.Text>
                                        <!-- StringFormat requires an empty set of curly braces at the start -->
                                        <MultiBinding StringFormat="{}{0} ({1})">
                                            <Binding Path="Name"/>
                                            <Binding Path="Company"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Button x:Name="btnAddCust" BorderThickness="0" Background="Transparent" Foreground="Green" FontSize="12" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" ToolTip="Add New Customer">
                        <icon:FontAwesome Kind="CirclePlusSolid"/>
                    </Button>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="10" VerticalAlignment="Center" Visibility="Collapsed">
                <TextBlock Text="Select Brand" Margin="0,5" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal">
                    <ComboBox x:Name="cbBrand" Margin="0,5" VerticalAlignment="Center" Width="150"/>
                    <Button x:Name="btnAddBrand" BorderThickness="0" Background="Transparent" Foreground="Green" FontSize="12" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" ToolTip="Add New Customer">
                        <icon:FontAwesome Kind="CirclePlusSolid"/>
                    </Button>
                </StackPanel>                
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="10" VerticalAlignment="Center">
                <!--<CheckBox Content="Custom" x:Name="chCust"/>
                <StackPanel Orientation="Horizontal">-->
                    <!--<TextBlock Text="Select Product" Margin="0,0,5,0" VerticalAlignment="Center" Visibility="{Binding ElementName=chCust, Path=IsChecked, Converter={StaticResource InvertableBooleanToVisibilityConverter}, ConverterParameter=Inverted}"/>
                    <ComboBox x:Name="cbProduct" Margin="0,0,5,0" VerticalAlignment="Center" Width="150" DisplayMemberPath="Code" SelectionChanged="cbProduct_SelectionChanged" Visibility="{Binding ElementName=chCust, Path=IsChecked, Converter={StaticResource InvertableBooleanToVisibilityConverter}, ConverterParameter=Inverted}"/>-->
                    <TextBlock Text="Product Name" Margin="0,5" VerticalAlignment="Center"/>
                    <TextBox x:Name="tbPname" Margin="0,5" VerticalAlignment="Center" Width="150" Style="{StaticResource InputBox}"/>
                    <!--<Button x:Name="btnAddProd" Visibility="{Binding ElementName=chCust, Path=IsChecked, Converter={StaticResource InvertableBooleanToVisibilityConverter}, ConverterParameter=Inverted}" Background="Transparent" Click="btnAddProd_Click" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" ToolTip="Add New Customer">
                        <icon:FontAwesome Kind="PlusSolid"/>
                    </Button>-->
                <!--</StackPanel>-->
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="10" VerticalAlignment="Center">
                <TextBlock Text="Ref Images" Margin="0,5" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="btnImg" BorderThickness="0" Background="Transparent" Margin="5,0,5,0" BorderBrush="Black" Click="btnImg_Click">
                        <TextBlock x:Name="tbImg"/>
                    </Button>
                    <Button x:Name="btnUpload" BorderThickness="0" Background="Transparent" Click="btnUpload_Click" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" ToolTip="Add New Customer">
                        <icon:FontAwesome Kind="UploadSolid"/>
                    </Button>
                </StackPanel>                
            </StackPanel>
            
            <ItemsControl ItemsSource="{Binding DynamicFields}" ItemTemplateSelector="{StaticResource MySelector}" />
            
            <StackPanel Orientation="Vertical" Margin="10" VerticalAlignment="Center">
                <TextBlock Text="Quantity" Margin="0,5" VerticalAlignment="Center"/>
                <TextBox x:Name="tbQty" Margin="0,5" Text="{Binding ElementName=createOrder, Path=ProductCost.Quantity, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Width="50" Style="{StaticResource InputBox}"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="10" VerticalAlignment="Center">
                <TextBlock Text="Rate" Margin="0,5" VerticalAlignment="Center"/>
                <TextBox x:Name="tbRate" Margin="0,5" Text="{Binding ElementName=createOrder, Path=ProductCost.Rate, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" MinWidth="60" Style="{StaticResource InputBox}"/>
            </StackPanel>
            <!--<StackPanel Orientation="Vertical" Margin="10" VerticalAlignment="Center">
                <TextBlock Text="Discount" Margin="0,5" VerticalAlignment="Center"/>
                <TextBox x:Name="tbDisc" Margin="0,5" VerticalAlignment="Center" MinWidth="60" Style="{StaticResource InputBox}"/>
            </StackPanel>-->
            <StackPanel Orientation="Vertical" Margin="10" VerticalAlignment="Center">
                <TextBlock Text="GST" Margin="0,5" VerticalAlignment="Center"/>
                <TextBox x:Name="tbGst" Margin="0,5" Text="{Binding ElementName=createOrder, Path=ProductCost.GST, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" MinWidth="60" Style="{StaticResource InputBox}"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="10" VerticalAlignment="Center">
                <TextBlock Text="Total Price" Margin="0,5" VerticalAlignment="Center"/>
                <TextBox x:Name="tbPrice" Margin="0,5" Text="{Binding ElementName=createOrder, Path=ProductCost.TotalPrice, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" MinWidth="60" Style="{StaticResource InputBox}"/>
            </StackPanel>
            <Button x:Name="btnAdd" Margin="10" VerticalAlignment="Center" Click="btnAdd_Click" Content="Add To Cart" Style="{StaticResource KlikButtonStyle}"/>
        </WrapPanel>

        <DataGrid Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="True" Margin="0,10" Name="dataGrid1" VerticalAlignment="Stretch" ItemsSource="{Binding ElementName=createOrder, Path=ProductCollection}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding ProductCost.Quantity, UpdateSourceTrigger=PropertyChanged}" Width="100"/>
                <DataGridTextColumn Header="Rate" Binding="{Binding ProductCost.Rate, UpdateSourceTrigger=PropertyChanged}" Width="100" />
                <DataGridTextColumn Header="GST" Binding="{Binding ProductCost.GST, UpdateSourceTrigger=PropertyChanged}" Width="60"/>
                <DataGridTextColumn Header="Total Price" Binding="{Binding ProductCost.TotalPrice, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <WrapPanel Orientation="Horizontal" Grid.Row="2">
            <StackPanel Orientation="Vertical" Margin="10" VerticalAlignment="Center">
                <TextBlock Text="Total Order" Margin="0,5" VerticalAlignment="Center"/>
                <TextBox x:Name="tbTOrder" Margin="0,5" Text="{Binding OrderAmount, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Width="50" Style="{StaticResource InputBox}"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="10" VerticalAlignment="Center">
                <TextBlock Text="Payment Received" Margin="0,5" VerticalAlignment="Center"/>
                <TextBox x:Name="tbPayment" Margin="0,5" Text="{Binding ReceivedAmount, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" MinWidth="60" Style="{StaticResource InputBox}"/>
            </StackPanel>
        </WrapPanel>
        
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
            <Button x:Name="btnOrderImg" Content="Upload Order Images" Style="{StaticResource KlikButtonStyle}" Margin="5" Click="btnOrderImg_Click"/>
            <Button x:Name="btnAddOrder" Content="Create Order" Style="{StaticResource KlikButtonStyle}" Margin="5" Click="btnAddOrder_Click"/>
        </StackPanel>
        
    </Grid>
</UserControl>
