<UserControl x:Class="BahiKitab.Views.AdminSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BahiKitab.Views"
             xmlns:vm="clr-namespace:BahiKitab.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="Button" x:Key="ButtonStyle">
            <Setter Property="Height" Value="50"/>
            <Setter Property="MinWidth" Value="180"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#20b2aa"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,10"/>
        </Style>
    </UserControl.Resources>
    <UserControl.DataContext>
        <vm:AdminSettingsViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".7*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width=".2*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".2*"/>
                <ColumnDefinition Width=".2*"/>
                <ColumnDefinition Width=".2*"/>
                <ColumnDefinition Width=".2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Button Content="Staff" Grid.Column="0" Grid.Row="0" Style="{StaticResource ButtonStyle}"/>
            <Button Content="Departments" Grid.Column="1" Grid.Row="0" Style="{StaticResource ButtonStyle}" Command="{Binding NavigateCommand}" CommandParameter="Dept"/>
            <Button Content="Order Stages" Grid.Column="2" Grid.Row="0" Style="{StaticResource ButtonStyle}" Command="{Binding NavigateCommand}" CommandParameter="OStage"/>
            <Button Content="Connect Whatsapp" Grid.Column="3" Grid.Row="0" Style="{StaticResource ButtonStyle}"/>
            <Button Content="Connect Email" Grid.Column="0" Grid.Row="2" Style="{StaticResource ButtonStyle}"/>
            <Button Content="Categories" Grid.Column="1" Grid.Row="2" Style="{StaticResource ButtonStyle}"/>
            <Button Content="Sub Categories" Grid.Column="2" Grid.Row="2" Style="{StaticResource ButtonStyle}"/>
            <Button Content="Sub Sub Categories" Grid.Column="3" Grid.Row="2" Style="{StaticResource ButtonStyle}"/>
        </Grid>
        <Grid Grid.Column="2">            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Lead Settings" FontSize="16" Foreground="Black" Grid.Row="0" Padding="10"/>
            <TextBlock Text="Dead Reasons" FontSize="14" Foreground="Blue" Grid.Row="2" Padding="10"/>
            <TextBlock Text="FollowUp Stages" FontSize="14" Foreground="Blue" Grid.Row="3" Padding="10"/>
            <TextBlock Text="Mature Stages" FontSize="14" Foreground="Blue" Grid.Row="4" Padding="10"/>
            <TextBlock Text="Lead Tag" FontSize="14" Foreground="Blue" Grid.Row="5" Padding="10"/>
            <TextBlock Text="Lead Source" FontSize="14" Foreground="Blue" Grid.Row="6" Padding="10"/>
            <TextBlock Text="Lead Label" FontSize="14" Foreground="Blue" Grid.Row="7" Padding="10"/>
        </Grid>
    </Grid>
</UserControl>
