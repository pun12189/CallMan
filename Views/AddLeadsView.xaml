<UserControl x:Class="BahiKitab.Views.AddLeadsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BahiKitab.Views"
             xmlns:core="clr-namespace:BahiKitab.Core"
             mc:Ignorable="d">
    <UserControl.Resources>
        <core:IdToButtonTextConverter x:Key="IdToButtonTextConverter"/>
    </UserControl.Resources>
    <ScrollViewer>
        <Border Grid.Column="1" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Padding="15">
            <StackPanel>
                <TextBlock Text="{Binding CurrentLead.Id, StringFormat='Lead Details ({0})'}" 
               FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>

                <!-- Form Fields (Bound to CurrentLead) -->
                <TextBlock Text="Name" Margin="0,5,0,2"/>
                <TextBox Text="{Binding CurrentLead.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <TextBlock Text="Company" Margin="0,5,0,2"/>
                <TextBox Text="{Binding CurrentLead.Company, Mode=TwoWay}" Margin="0,0,0,10"/>

                <TextBlock Text="Email" Margin="0,5,0,2"/>
                <TextBox Text="{Binding CurrentLead.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <TextBlock Text="Phone" Margin="0,5,0,2"/>
                <TextBox Text="{Binding CurrentLead.Phone, Mode=TwoWay}" Margin="0,0,0,10"/>

                <TextBlock Text="Lead Source" Margin="0,5,0,2"/>
                <TextBox Text="{Binding CurrentLead.LeadSource, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <TextBlock Text="Tags" Margin="0,5,0,2"/>
                <TextBox Text="{Binding CurrentLead.Tags, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <TextBlock Text="Label" Margin="0,5,0,2"/>
                <TextBox Text="{Binding CurrentLead.Label, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <TextBlock Text="Status" Margin="0,5,0,2"/>
                <!-- Hardcoding for simplicity, would bind to a list from Admin Settings in a real app -->
                <ComboBox x:Name="cbStatus" SelectedItem="{Binding CurrentLead.Stage, Mode=TwoWay}" Margin="0,0,0,20" SelectedValuePath="Content"/>
                <!-- CRUD Action Buttons -->
                <Button Content="{Binding CurrentLead.Id, Converter={StaticResource IdToButtonTextConverter}}" 
            Command="{Binding CreateUpdateLeadCommand}" 
            Margin="0,10,0,5"
            Style="{StaticResource KlikButtonStyle}"/>

            </StackPanel>
        </Border>
    </ScrollViewer>
</UserControl>
